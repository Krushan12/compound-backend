{
  "name": "fintech-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "lint": "eslint \"src/**/*.js\"",
    "lint:fix": "eslint \"src/**/*.js\" --fix",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "prisma:generate": "prisma generate --schema src/models/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema src/models/schema.prisma",
    "prisma:deploy": "prisma migrate deploy --schema src/models/schema.prisma",
    "prisma:studio": "prisma studio --schema src/models/schema.prisma",
    "script:reset-statuses": "node scripts/reset-stock-statuses.js",
    "script:import-stocks": "node scripts/import-stock-recommendations-from-csv.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.927.0",
    "@aws-sdk/s3-request-presigner": "^3.927.0",
    "@prisma/client": "^5.20.0",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "csv-parse": "^5.5.6",
    "dayjs": "^1.11.13",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "express-validator": "^7.2.0",
    "firebase-admin": "^13.6.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "razorpay": "^2.9.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "prisma": "^5.20.0",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
